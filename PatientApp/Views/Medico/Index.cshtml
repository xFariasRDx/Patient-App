@model IEnumerable<PatientApp.Core.Application.ViewModels.Medicos.MedicoViewModel>;

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="album py-5 row py-lg-5">
        <center>
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-bold fw-light">Doctor Maintenance</h1>
                <p class="lead text-muted">Here you can create new doctors</p>
            </div>
        </center>

    </div>
</div>
<div class="d-xl-flex flex-column justify-content-center align-content-md-center mb-5 ">
    <a asp-controller="Medico" asp-action="Create" class="btn btn-outline-success">New Doctor</a>
</div>

<div class="container">
    <div class="main-body">
        <div class="row">
            @foreach (PatientApp.Core.Application.ViewModels.Medicos.MedicoViewModel mvm in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                                <div class="mt-3">

                                    <h5>@mvm.Nombre</h5><h3>@mvm.Apellido</h3>
                                    <p class="text-secondary mb-1"><b>Correo: </b>@mvm.Correo</p>
                                    <p class="text-secondary mb-1"><b>Tel: </b>@mvm.Telefono</p>
                                    <p class="text-muted font-size-sm"><b>ID: </b>@mvm.Cedula</p>

                                    <a asp-controller="Medico" asp-action="Update" asp-route-Id="@mvm.Id" class=" btn btn-outline-warning"><i class="material-icons">✏️</i>Editar</a>
                                    <a asp-controller="Medico" asp-action="Delete" asp-route-Id="@mvm.Id" class=" btn btn-outline-danger"><i class="material-icons">🗑️</i> Eliminar</a>
                                </div>
                            </div>

                            <hr class="my-4">

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>